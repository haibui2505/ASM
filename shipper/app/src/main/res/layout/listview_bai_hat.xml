<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:padding="10dp"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="116dp"
            android:layout_margin="10dp">

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="18dp"
                android:layout_marginTop="0dp"
                app:srcCompat="@drawable/ac10" />

            <TextView
                android:id="@+id/txt_ngayGui"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="23dp"
                android:layout_marginEnd="4dp"
                android:fontFamily="@font/e"
                android:text="dd/MM/yyyy" />

            <TextView
                android:id="@+id/txt_tacGia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_tenBaiHat"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/imageView12"
                android:fontFamily="@font/b"
                android:text="Tác giả" />

            <TextView
                android:id="@+id/txt_tenBaiHat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="23dp"
                android:layout_toStartOf="@+id/txt_ngayGui"
                android:layout_toEndOf="@+id/imageView12"
                android:fontFamily="@font/b"
                android:text="Tên bài hát"
                android:textSize="21sp" />

            <TextView
                android:id="@+id/txt_loiBaiHat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_tacGia"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/imageView12"
                android:text="Lời bài hát" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>